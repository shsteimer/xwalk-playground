{
  "definitions": [
    {
      "title": "Hero",
      "id": "hero",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Hero",
              "model": "hero",
              "filter": "hero",
              "content_title": "",
              "content_titleType": "h1",
              "classes_type": "image"
            }
          }
        }
      }
    },
    {
      "title": "Hero CTA",
      "id": "hero-cta",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": {
              "name": "Hero CTA",
              "model": "hero-cta"
            }
          }
        }
      }
    },
    {
      "title": "Hero Asset CTA",
      "id": "hero-asset-cta",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": {
              "name": "Hero Asset CTA",
              "model": "hero-asset-cta"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "hero",
      "fields": [
        {
          "component": "select",
          "name": "classes_type",
          "label": "Background Type",
          "required": true,
          "options": [
            {
              "name": "Image",
              "value": "image"
            },
            {
              "name": "Video",
              "value": "video"
            }
          ]
        },
        {
          "component": "text",
          "name": "content_title",
          "label": "Title",
          "valueType": "string",
          "validation": {
            "minLength": 0,
            "maxLength": 70,
            "customErrorMsg": "Hero Title should not be more than 70 characters"
          }
        },
        {
          "component": "select",
          "name": "content_titleType",
          "label": "Title Type",
          "options": [
            {
              "name": "h1",
              "value": "h1"
            }
          ],
          "hidden": true,
          "valueType": "string",
          "value": "h1"
        },
        {
          "component": "select",
          "name": "classes_font",
          "label": "Title Font",
          "valueType": "string",
          "value": "Roboto",
          "options": [
            {
              "name": "Roboto",
              "value": "Roboto"
            },
            {
              "name": "Lato",
              "value": "Lato"
            }
          ]
        },
        {
          "component": "richtext",
          "name": "content_description",
          "label": "Description",
          "valueType": "string"
        },
        {
          "component": "select",
          "name": "classes_size",
          "label": "Hero Size",
          "value": "large",
          "options": [
            {
              "name": "Large",
              "value": "large"
            },
            {
              "name": "Medium",
              "value": "medium"
            }
          ],
          "condition": {
            "===": [
              {
                "var": "classes_type"
              },
              "image"
            ]
          }
        },
        {
          "component": "boolean",
          "label": "Offset Content?",
          "name": "classes_offset",
          "valueType": "boolean",
          "description": "Offset content on the left in the hero section"
        },
        {
          "component": "reference",
          "valueType": "string",
          "name": "background_image",
          "label": "Background Image",
          "multi": false,
          "required": true,
          "condition": {
            "===": [
              {
                "var": "classes_type"
              },
              "image"
            ]
          }
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "background_imageAlt",
          "label": "Image Alt Text",
          "condition": {
            "===": [
              {
                "var": "classes_type"
              },
              "image"
            ]
          }
        },
        {
          "component": "reference",
          "valueType": "string",
          "multi": false,
          "name": "background_video",
          "label": "Video",
          "required": true,
          "condition": {
            "===": [
              {
                "var": "classes_type"
              },
              "video"
            ]
          }
        },
        {
          "component": "reference",
          "valueType": "string",
          "multi": false,
          "name": "content_icon",
          "label": "Icon",
          "condition": {
            "===": [
              {
                "var": "classes_type"
              },
              "image"
            ]
          }
        },
        {
          "component": "text",
          "name": "content_iconAlt",
          "label": "Icon Alt text",
          "valueType": "string",
          "condition": {
            "===": [
              {
                "var": "classes_type"
              },
              "image"
            ]
          }
        },
        {
          "component": "select",
          "name": "classes_textColor",
          "label": "Text Color",
          "value": "white",
          "required": true,
          "options": [
            {
              "name": "Black",
              "value": "black"
            },
            {
              "name": "White",
              "value": "white"
            }
          ],
          "condition": {
            "or": [
              {
                "===": [
                  {
                    "var": "classes_type"
                  },
                  "image"
                ]
              },
              {
                "===": [
                  {
                    "var": "classes_type"
                  },
                  "video"
                ]
              }
            ]
          }
        }
      ]
    },
    {
      "id": "hero-cta",
      "fields": [
        {
          "component": "select",
          "name": "ctas_ctaType",
          "label": "CTA Style",
          "value": "primary",
          "options": [
            {
              "name": "Primary",
              "value": "primary"
            },
            {
              "name": "Secondary",
              "value": "secondary"
            }
          ]
        },
        {
          "component": "text",
          "name": "ctas_ctaText",
          "label": "First CTA Label",
          "valueType": "string"
        },
        {
          "component": "aem-content",
          "name": "ctas_cta",
          "label": "CTA Link",
          "valueType": "string",
          "validation": {
            "rootPath": "/content"
          }
        },
        {
          "component": "text",
          "name": "ctas_ctaTitle",
          "label": "ARIA Label",
          "valueType": "string"
        }
      ]
    },
    {
      "id": "hero-asset-cta",
      "fields": [
        {
          "component": "select",
          "name": "ctas_ctaType",
          "label": "CTA Style",
          "value": "primary",
          "options": [
            {
              "name": "Primary",
              "value": "primary"
            },
            {
              "name": "Secondary",
              "value": "secondary"
            }
          ]
        },
        {
          "component": "text",
          "name": "ctas_ctaText",
          "label": "First CTA Label",
          "valueType": "string"
        },
        {
          "component": "reference",
          "valueType": "string",
          "multi": false,
          "name": "ctas_cta",
          "label": "Asset (PDF/Image)",
          "validation": {
            "rootPath": "/content"
          }
        },
        {
          "component": "text",
          "name": "ctas_ctaTitle",
          "label": "ARIA Label",
          "valueType": "string"
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "hero",
      "components": [
        "hero-cta",
        "hero-asset-cta"
      ]
    }
  ]
}

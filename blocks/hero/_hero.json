{
  "definitions": [
    {
      "title": "Hero",
      "id": "hero",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Hero",
              "model": "hero",
              "content_title": "",
              "content_titleType": "h1",
              "classes_type": "image"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "hero",
      "fields": [
        {
          "component": "select",
          "name": "classes_type",
          "label": "Background Type",
          "required": true,
          "options": [
            {
              "name": "Image",
              "value": "image"
            },
            {
              "name": "Video",
              "value": "video"
            }
          ]
        },
        {
          "component": "text",
          "name": "content_title",
          "label": "Title",
          "valueType": "string",
          "validation": {
            "minLength": 0,
            "maxLength": 70,
            "customErrorMsg": "Hero Title should not be more than 70 characters"
          }
        },
        {
          "component": "select",
          "name": "content_titleType",
          "label": "Title Type",
          "options": [
            {
              "name": "h1",
              "value": "h1"
            }
          ],
          "hidden": true,
          "valueType": "string",
          "value": "h1"
        },
        {
          "component": "select",
          "name": "classes_font",
          "label": "Title Font",
          "valueType": "string",
          "value": "Roboto",
          "options": [
            {
              "name": "Roboto",
              "value": "Roboto"
            },
            {
              "name": "Lato",
              "value": "Lato"
            }
          ]
        },
        {
          "component": "richtext",
          "name": "content_description",
          "label": "Description",
          "valueType": "string"
        },
        {
          "component": "select",
          "name": "classes_size",
          "label": "Hero Size",
          "value": "large",
          "options": [
            {
              "name": "Large",
              "value": "large"
            },
            {
              "name": "Medium",
              "value": "medium"
            }
          ],
          "condition": {
            "===": [
              {
                "var": "classes_type"
              },
              "image"
            ]
          }
        },
        {
          "component": "boolean",
          "label": "Offset Content?",
          "name": "classes_offset",
          "valueType": "boolean",
          "description": "Offset content on the left in the hero section"
        },
        {
          "component": "reference",
          "valueType": "string",
          "name": "background_image",
          "label": "Background Image",
          "multi": false,
          "required": true,
          "condition": {
            "===": [
              {
                "var": "classes_type"
              },
              "image"
            ]
          }
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "background_imageAlt",
          "label": "Image Alt Text",
          "condition": {
            "===": [
              {
                "var": "classes_type"
              },
              "image"
            ]
          }
        },
        {
          "component": "reference",
          "valueType": "string",
          "multi": false,
          "name": "background_video",
          "label": "Video",
          "required": true,
          "condition": {
            "===": [
              {
                "var": "classes_type"
              },
              "video"
            ]
          }
        },
        {
          "component": "reference",
          "valueType": "string",
          "multi": false,
          "name": "content_icon",
          "label": "Icon",
          "condition": {
            "===": [
              {
                "var": "classes_type"
              },
              "image"
            ]
          }
        },
        {
          "component": "text",
          "name": "content_iconAlt",
          "label": "Icon Alt text",
          "valueType": "string",
          "condition": {
            "===": [
              {
                "var": "classes_type"
              },
              "image"
            ]
          }
        },
        {
          "component": "select",
          "name": "classes_textColor",
          "label": "Text Color",
          "value": "white",
          "required": true,
          "options": [
            {
              "name": "Black",
              "value": "black"
            },
            {
              "name": "White",
              "value": "white"
            }
          ],
          "condition": {
            "or": [
              {
                "===": [
                  {
                    "var": "classes_type"
                  },
                  "image"
                ]
              },
              {
                "===": [
                  {
                    "var": "classes_type"
                  },
                  "video"
                ]
              }
            ]
          }
        },
        {
          "component": "container",
          "collapsible": true,
          "name": "oneButton",
          "label": "First Button CTA Fields",
          "valueType": "string",
          "condition": {
            "===": [
              {
                "var": "classes_type"
              },
              "image"
            ]
          },
          "fields": [
            {
              "component": "select",
              "name": "ctas_ctaType",
              "label": "CTA Style",
              "value": "primary",
              "options": [
                {
                  "name": "Primary",
                  "value": "primary"
                },
                {
                  "name": "Secondary",
                  "value": "secondary"
                }
              ],
              "condition": {
                "===": [
                  {
                    "var": "classes_type"
                  },
                  "image"
                ]
              }
            },
            {
              "component": "text",
              "name": "ctas_ctaText",
              "label": "First CTA Label",
              "valueType": "string",
              "condition": {
                "===": [
                  {
                    "var": "classes_type"
                  },
                  "image"
                ]
              }
            },
            {
              "component": "select",
              "name": "ctas_ctaAction",
              "label": "CTA Selection",
              "options": [
                {
                  "name": "Link",
                  "value": "link"
                },
                {
                  "name": "Asset (PDF/Image)",
                  "value": "asset"
                }
              ],
              "condition": {
                "and": [
                  {
                    "===": [
                      {
                        "var": "classes_type"
                      },
                      "image"
                    ]
                  },
                  {
                    "!!": {
                      "var": "oneButton|ctas_ctaText"
                    }
                  }
                ]
              }
            },
            {
              "component": "aem-content",
              "name": "ctas_cta",
              "label": "CTA Link",
              "valueType": "string",
              "validation": {
                "rootPath": "/content"
              },
              "condition": {
                "and": [
                  {
                    "===": [
                      {
                        "var": "classes_type"
                      },
                      "image"
                    ]
                  },
                  {
                    "!!": {
                      "var": "oneButton|ctas_ctaText"
                    }
                  },
                  {
                    "===": [
                      {
                        "var": "oneButton|ctas_ctaAction"
                      },
                      "link"
                    ]
                  }
                ]
              }
            },
            {
              "component": "reference",
              "valueType": "string",
              "multi": false,
              "name": "ctas_cta",
              "label": "Asset (PDF/Image)",
              "condition": {
                "and": [
                  {
                    "===": [
                      {
                        "var": "classes_type"
                      },
                      "image"
                    ]
                  },
                  {
                    "!!": {
                      "var": "oneButton|ctas_ctaText"
                    }
                  },
                  {
                    "===": [
                      {
                        "var": "oneButton|ctas_ctaAction"
                      },
                      "asset"
                    ]
                  }
                ]
              }
            },
            {
              "component": "text",
              "name": "ctas_ctaTitle",
              "label": "ARIA Label",
              "valueType": "string",
              "condition": {
                "and": [
                  {
                    "===": [
                      {
                        "var": "classes_type"
                      },
                      "image"
                    ]
                  }
                ]
              }
            }
          ]
        },
        {
          "component": "container",
          "collapsible": true,
          "name": "twoButton",
          "label": "Second Button CTA Fields",
          "valueType": "string",
          "condition": {
            "and": [
              {
                "===": [
                  {
                    "var": "classes_type"
                  },
                  "image"
                ]
              }
            ]
          },
          "fields": [
            {
              "component": "select",
              "name": "ctas_secCtaType",
              "label": "CTA Style",
              "value": "primary",
              "options": [
                {
                  "name": "Primary",
                  "value": "primary"
                },
                {
                  "name": "Secondary",
                  "value": "secondary"
                }
              ],
              "condition": {
                "and": [
                  {
                    "===": [
                      {
                        "var": "classes_type"
                      },
                      "image"
                    ]
                  },
                  {
                    "!!": {
                      "var": "twoButton|ctas_secCtaText"
                    }
                  }
                ]
              }
            },
            {
              "component": "text",
              "name": "ctas_secCtaText",
              "label": "Second CTA Label",
              "valueType": "string",
              "description": "Enter label to display on the CTA for each card",
              "condition": {
                "===": [
                  {
                    "var": "classes_type"
                  },
                  "image"
                ]
              }
            },
            {
              "component": "select",
              "name": "ctas_secCtaAction",
              "label": "CTA Selection",
              "description": "Select the CTA Selection",
              "options": [
                {
                  "name": "Link",
                  "value": "link"
                },
                {
                  "name": "Asset (PDF/Image)",
                  "value": "asset"
                }
              ],
              "condition": {
                "and": [
                  {
                    "===": [
                      {
                        "var": "classes_type"
                      },
                      "image"
                    ]
                  },
                  {
                    "!!": {
                      "var": "twoButton|ctas_secCtaText"
                    }
                  }
                ]
              }
            },
            {
              "component": "aem-content",
              "name": "ctas_secCta",
              "label": "CTA Link",
              "valueType": "string",
              "description": "Enter the URL to navigate when CTA is clicked for each card",
              "validation": {
                "rootPath": "/content"
              },
              "condition": {
                "and": [
                  {
                    "===": [
                      {
                        "var": "classes_type"
                      },
                      "image"
                    ]
                  },
                  {
                    "!!": {
                      "var": "twoButton|ctas_secCtaText"
                    }
                  },
                  {
                    "===": [
                      {
                        "var": "twoButton|ctas_secCtaAction"
                      },
                      "link"
                    ]
                  }
                ]
              }
            },
            {
              "component": "reference",
              "valueType": "string",
              "multi": false,
              "name": "ctas_secCta",
              "label": "Asset (PDF/Image)",
              "description": "Upload the Asset (PDF/Image)",
              "condition": {
                "and": [
                  {
                    "===": [
                      {
                        "var": "classes_type"
                      },
                      "image"
                    ]
                  },
                  {
                    "!!": {
                      "var": "twoButton|ctas_secCtaText"
                    }
                  },
                  {
                    "===": [
                      {
                        "var": "twoButton|ctas_secCtaAction"
                      },
                      "asset"
                    ]
                  }
                ]
              }
            },
            {
              "component": "text",
              "name": "ctas_secCtaTitle",
              "label": "ARIA Label",
              "valueType": "string",
              "condition": {
                "and": [
                  {
                    "===": [
                      {
                        "var": "classes_type"
                      },
                      "image"
                    ]
                  }
                ]
              }
            }
          ]
        }
      ]
    }
  ],
  "filters": []
}
